<div class="container-fluid">
  <div class="separator-1"></div>
  <h1>Características del hostel</h1>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <h4>Añadir una nueva característica</h4>
          </div>
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
  <div class="separator-2"></div>
  <h1>Listado</h1>
  <div class="separator-1"></div>
  <div class="features-list row">
    <%= render partial:'hostel_feature', collection: @hostel_features %>
  </div>
  <div class="separator-3"></div>
</div>

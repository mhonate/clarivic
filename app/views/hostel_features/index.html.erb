<div class="container-fluid">
  <div class="separator-1"></div>
  <h1>Características del hostel</h1>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <h4>Añadir una nueva característica</h4>
          </div>
          <%= form_with model: [@hostel, @hostel_feature] do |form| %>
            <div class="row">
              <div class="col-6">
                <div class="form-group">
                  <%= form.label :title %>
                  <%= form.text_field :title, class:"form-control" %>
                </div>
              </div>
              <div class="col">
                <div class="form-group">
                  <%= form.label :image %>
                  <%= form.file_field :image, class:"form-control-file" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="form-group">
                  <%= form.label :description %>
                  <%= form.text_area :description, class:"form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <%= form.submit class:"btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="separator-2"></div>
  <h1>Listado</h1>
  <div class="separator-1"></div>
  <div class="row">
    <%= render partial:'hostel_feature', collection: @hostel_features %>
  </div>
  <div class="separator-3"></div>
</div>

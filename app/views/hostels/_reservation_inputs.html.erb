<div class="form-group">
  <%= form.label 'Inicio de la reserva' %>
  <%= form.text_field :starting_date, autocomplete:'off',
                      id:"starting_date-#{name}",
                      class:'form-control datepicker',
                      value:@starting_date %>
</div>
<div class="form-group">
  <%= form.label 'Fin de la reserva' %>
  <%= form.text_field :ending_date, autocomplete:'off',
                      id:"ending_date-#{name}",
                      class:'form-control based-datepicker',
                      'data-based':"starting_date-#{name}",
                      value:@ending_date %>
</div>

<div class="container-fluid">
  <h1>Hostales</h1>
  <div class="row">
    <div class="col-7">
      <h3>Listado</h3>
      <%= render @hostels %>
    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Filtros</h4>
          <%= form_with url: hostels_path do |form| %>
            <div class="form-group">
              <%= form.label 'Región' %>
              <%= form.select :region_id,
                ([['Cualquier región', -1]] + @regions.pluck(:short_name, :id)), {},
                class:'form-control', onChange: 'changeCommunes()' %>
            </div>
            <div class="form-group">
              <%= form.label 'Comuna' %>
              <%= form.select :region_id,
                ([['Cualquier comuna', -1]] + @regions.pluck(:short_name, :id)), {},
                class:'form-control', onChange: 'changeCommunes()' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="separator-2"></div>

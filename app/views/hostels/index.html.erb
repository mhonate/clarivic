<div class="container-fluid">
  <h1>Hostales</h1>
  <div class="row">
    <div class="col-7">
      <h3>Listado</h3>
      <div class="hostels-list">
        <%= render @hostels %>
      </div>
    </div>
    <div class="col-4 border-left">
      <div class="card hostel-filter-search">
        <div class="card-body">
          <h4 class="card-title">Filtros</h4>
          <%= form_with url: hostels_path, method: 'get' do |form| %>
            <div class="form-group">
              <%= form.label 'Región' %>
              <%= form.select :region_id,
                ([['Cualquier región', -1]] + @regions.pluck(:short_name, :id)), {},
                class:'form-control',
                onChange: "changeCommunes(this, '#commune_id'); Rails.fire(this.form, 'submit')" %>
            </div>
            <div class="form-group">
              <%= form.label 'Comuna' %>
              <%= form.select :commune_id,[['Cualquier comuna', -1]], {},
                class:'form-control',
                onChange: "Rails.fire(this.form, 'submit')" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="separator-2"></div>

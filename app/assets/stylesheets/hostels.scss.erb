.hostel-description {
  height: 40px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 10px;
  font-size: small;
}

span#starting-date, span#ending-date, a.text-white {
  font-weight: bold;
}

a.text-white {
  text-decoration: underline !important;
  cursor: pointer;
}

.card.hostel-filter-search{
  position: fixed;
  width: 37%;
  top: 100px;
  right: 3%;
}
